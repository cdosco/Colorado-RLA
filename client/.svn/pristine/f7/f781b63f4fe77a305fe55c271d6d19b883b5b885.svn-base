{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "arrow-parens": [true, "ban-single-arg-parens"],
        "interface-name": false,
        "max-line-length":
            [true, {"limit": 120,
                    "ignore-pattern": "<rect |<path"}],
        "no-namespace": [true, "allow-declarations"],
        "quotemark": [true, "single", "jsx-single"]
    },
    "rulesDirectory": []
}
